<% layout('/layouts/boilerplate') %>
<body>
    <h1 class="mt-3 offset-2">Create a new listing</h1>
    
    <form method ="POST" action="/listings" novalidate class="needs-validation">
        <div class="row">
            <div class="col-8 offset-2">

        <div class="mb-3">
        <label class="form-label" for="title">Title : </label>
        <input name="listing[title]"
        placeholder="Add a catchy title"
        type="text" 
        class="form-control" required>
        <div class="valid-feedback">Title Looks Good!</div>
        <div class="invalid-feedback">Unique Title is Required!</div>
        </div>

        <div class="mb-3">
        <label class="form-label" for="description">Description : </label>
        <textarea name="listing[description]" placeholder="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
        <label class="form-label" for="image">Image Url : </label>
        <input placeholder="Enter Image url" name="listing[image]" type="text" class="form-control">
        </div>

        <div class="mb-3">
        <label class="form-label" for="price">Price : </label>
        <input type="number" placeholder="Price / night" name="listing[price]" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid price!</div>
        </div>

        <div class="mb-3">
        <label class="form-label" for="location">Location : </label>
        <input placeholder="location" name="listing[location]" type="text" class="form-control" required>
        <div class="invalid-feedback">Please Enter Location!</div>
        </div>

        <%
        const countries = ["India", "United States", "United Kingdom", "Canada", "Australia",
        "Germany", "France", "Japan", "China", "Brazil", "South Africa", "Italy", "Russia", "Mexico", "New Zealand"];
        %>

        <div class="mb-3">
        <label class="form-label" for="country">Select your country:</label>
        <select name="listing[country]" id="country" required>
        <option value="">-- Select Country --</option>
        <% countries.forEach((country) => { %>
        <option value="<%= country %>"><%= country %></option>
        <% }); %>
        </select>
        <div class="invalid-feedback">Please Enter Location!</div>
        </div>
        
        <button type="submit" class="add-new-btn mb-5 ">ADD</button>
    </div>
    </div>
    </form>
</body>
