<% layout('/layouts/boilerplate') -%>

<body>
 <h1 class="mt-3 offset-2">Edit Your Listing</h1>
    <form method ="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="row">
            <div class="col-8 offset-2">
        <div class="mb-3">
        <label class="form-label" for="listing id "><b>Listing ID :<%= listing._id %></b></label>
        </div>
        <div class="mb-3">
        <label class="form-label" for="title">Title : </label>
        <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control">
        </div>
        <div class="mb-3">
        <label class="form-label" for="description">Description : </label>
        <textarea name="listing[description]" placeholder="Description" class="form-control">
        <%= listing.description %>
        </textarea>
        </div>
        <div class="mb-3">
        <label class="form-label" for="image">Image Url : </label>
        <input value="<%= listing.image %>" name="listing[image]" type="text" class="form-control">
        </div>
        <div class="mb-3">
        <label class="form-label" for="price">Price : </label>
        <input value="<%= listing.price %>" name="listing[price]" type="number" step="100" class="form-control">
        </div>
        <div class="mb-3">
        <label class="form-label" for="location">Location : </label>
        <input value="<%= listing.location %>" name="listing[location]" type="text" class="form-control">
        </div>

        <%
        const countries = ["India", "United States", "United Kingdom", "Canada", "Australia",
        "Germany", "France", "Japan", "China", "Brazil", "South Africa", "Italy", "Russia", "Mexico", "New Zealand"];
        %>

        <div class="mb-3">
        <label class="form-label" for="country">Select your country:</label>
        <select name="country" id="country">
        <option value="<%= listing.country%>"><%= listing.country%></option>
        <% countries.forEach((country) => { %>
        <option value="<%= country %>"><%= country %></option>
        <% }); %>
        </select>
        </div>
        
        <button type="submit" class="add-new-btn mb-5 ">UPDATE</button>
    </div>
    </div>
    </form>
</body>
